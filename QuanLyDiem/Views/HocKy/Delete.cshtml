@model QuanLyDiem.Models.HocKy

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa học kỳ</h1>

<div>
    <hr />
    <dl class="w3-card w3-white container" style="width:60%">
        <div class="row">
                <dt class = "col-sm-6">
                    Khóa học
                </dt>
                <dd class = "col-sm-6">
                    @Html.DisplayFor(model => model.KhoaHoc.MaKhoaHoc)
                </dd>
            </div>
            <div class="row">
                <dt class = "col-sm-6">
                    Tên học kỳ
                </dt>
                <dd class = "col-sm-6">
                    @Html.DisplayFor(model => model.TenHocKy)
                </dd>
            </div>
        </div>
    </dl>    
    <h4 class="w3-center">Bạn có chắc chắn muốn xóa học kỳ này?</h4>
    <form class="w3-center" asp-action="Delete">
        <input type="hidden" asp-for="MaHocKy" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Hủy</a>
    </form>
</div>

