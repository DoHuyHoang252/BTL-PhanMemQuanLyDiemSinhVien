@model QuanLyDiem.Models.ChuyenNganh

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa chuyên ngành</h1>

<div>
    <hr />
    <dl class="w3-card w3-white container" style="width:60%">
        
        <div class="row">
            <dt class = "col-sm-6">
                Tên chuyên ngành
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.TenChuyenNganh)
            </dd>
        </div>
        <div class="row">
            <dt class = "col-sm-6">
                Mã khoa
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.MaKhoa)
            </dd> 
        </div>
    </dl>
    <h4 class="w3-center">Bạn có chắc chắn muốn xóa chuyên ngành này?</h4>
    <form class="w3-center" asp-action="Delete">
        <input type="hidden" asp-for="MaChuyenNganh" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Hủy</a>
    </form>
</div>
