@model QuanLyDiem.Models.ChuyenNganh

@{
    ViewData["Title"] = "Edit";
}

<h1>Sửa thông tin chuyên ngành</h1>

<hr />
<div class="row">
    <div class="w3-card w3-white container" style="width:60%;">
        <form  asp-action="Edit">
            <h4 class="w3-center">Nhập thông tin cần sửa</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaChuyenNganh" />
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label class="control-label">Tên chuyên ngành</label>
                    <input asp-for="TenChuyenNganh" class="form-control" />
                    <span asp-validation-for="TenChuyenNganh" class="text-danger"></span>
                </div>

                <div class="form-group col-md-6">
                    <label class="control-label">Mã Khoa</label>
                    <select asp-for="MaKhoa" class ="form-control" asp-items="ViewBag.MaKhoa"></select>
                </div> 
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-outline-info" /> |
                <a asp-action="Index">Trở về</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
