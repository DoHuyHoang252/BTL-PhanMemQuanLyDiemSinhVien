@model QuanLyDiem.Models.Khoa

@{
    ViewData["Title"] = "Edit";
}

<h1>Sửa</h1>

<h4>Khoa</h4>
<hr />
<div class="row">
    <div class="w3-card w3-white container" style="width:60%;">
        <form asp-action="Edit">
            <h4 class="w3-center">Nhập thông tin cần sửa</h4>
            <input type="hidden" asp-for="MaKhoa" />
            <div class="form-group">
                <label class="control-label">Tên khoa</label>
                <input asp-for="TenKhoa" class="form-control" />
                <span asp-validation-for="TenKhoa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-outline-info" /> |
                <a asp-action="Index">Trở về</a>
            </div>
        </form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
