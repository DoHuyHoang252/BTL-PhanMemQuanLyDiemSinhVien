@model QuanLyDiem.Models.BangDiem

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa bảng điểm sinh viên</h1>

<div>
    <hr />
    <dl class="w3-card w3-white container" style="width:60%">
        
        <div class="row">
            <dt class = "col-sm-6">
                Sinh viên
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.SinhVien.TenSinhVien)
            </dd>
        </div>
        <div class="row">
            <dt class = "col-sm-6">
                Học phần
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.HocPhan.TenHocPhan)
            </dd>
        </div>
        <div class="row">
            <dt class = "col-sm-6">
                Điểm chuyên cần
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.DiemChuyenCan)
            </dd>
        </div>
        <div class="row">
            <dt class = "col-sm-6">
                Điểm kiểm tra
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.DiemKiemTra)
            </dd>
        </div>
        <div class="row">
            <dt class = "col-sm-6">
                Điểm thi
            </dt>
            <dd class = "col-sm-6">
                @Html.DisplayFor(model => model.DiemThi)
            </dd>
        </div>
    </dl>
    <h4 class="w3-center">Bạn có chắc chắn muốn xóa bảng điểm này?</h4>
    <form class="w3-center" asp-action="Delete">
        <input type="hidden" asp-for="MaBangDiem" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Hủy</a>
    </form>
</div>
