@model IEnumerable<QuanLyDiem.Models.LopHocPhan>

@{
    ViewData["Title"] = "Index";
}

<h3>Danh sách lớp học</h3>

<div class="row">
    <div class="col-12">
        <div class="card w3-round-large">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <div class="w3-right"><a class="btn w3-round-large w3-medium btn btn-outline-info" asp-action="Create">Tạo mới lớp học phần</a></div>
                    </div>
                    <div class="col-md-6">
                        <div class="w3-left"><a class="btn w3-round-large w3-medium btn btn-outline-info" asp-action="Download">Tải về danh sách</a></div>
                    </div>
                </div>                    
                <div class="table-responsive m-t-40 ">
                    <table id="myTable" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th onclick="sortTable(0)" class="column_name" style="width: 20%">
                                    Học phần
                                </th>
                                <th onclick="sortTable(1)" class="column_name" style="width: 25%">
                                    Tên lớp học
                                </th>
                                <th onclick="sortTable(2)" class="column_name" style="width: 15%">
                                    Giảng viên
                                </th>
                                <th onclick="sortTable(3)" class="column_name" style="width: 15%">
                                    Học kỳ
                                </th>
                                <th style="width:20%"></th>
                            </tr>
                        </thead>
                        <tbody>
                    @foreach (var item in Model) {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HocPhan.TenHocPhan)
                                </td>
                                <td >
                                    @Html.DisplayFor(modelItem => item.TenLopHocPhan)
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.GiangVien.TenGiangVien)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.HocKy.TenHocKy)
                                </td>
                                <td >
                                    <a class="btn btn-outline-info w3-medium w3-round-large" asp-action="Edit" asp-route-id="@item.MaLopHocPhan">Sửa</a>
                                    <a class="btn btn-outline-info w3-medium w3-round-large" asp-action="Delete"  asp-route-id="@item.MaLopHocPhan">Xóa</a>
                                    <a class="btn btn-outline-info w3-medium w3-round-large" asp-action="Details" asp-route-id="@item.MaLopHocPhan">Bảng điểm</a>

                                </td>
                            </tr>
                    }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>