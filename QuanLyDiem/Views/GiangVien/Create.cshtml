@model QuanLyDiem.Models.GiangVien

@{
    ViewData["Title"] = "Create";
}
<h1>Thêm mới giảng viên</h1>

<hr />
<div class="row">
    <div class="w3-card w3-white container" style="width:60%;">
        <form asp-action="Create">
            <h4 class="w3-center">Nhập thông tin cần thêm</h4>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Mã giảng viên</label>
                <input asp-for="MaGiangVien" class="form-control" />
                <span asp-validation-for="MaGiangVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tên giảng viên</label>
                <input asp-for="TenGiangVien" class="form-control" />
                <span asp-validation-for="TenGiangVien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Giới tính</label>
                <input asp-for="GioiTinh" class="form-control" />
                <span asp-validation-for="GioiTinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ngày sinh</label>
                <input asp-for="NgaySinh" class="form-control" />
                <span asp-validation-for="NgaySinh" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Mã khoa</label>
                <select asp-for="MaKhoa" class ="form-control" asp-items="ViewBag.MaKhoa"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Mã chuyên Ngành</label>
                <select asp-for="MaChuyenNganh" class ="form-control" asp-items="ViewBag.MaChuyenNganh"></select>
            </div>    
            <div class="form-group">
                <input type="submit" value="Thêm mới" class="btn btn-outline-info" /> |
                <a asp-action="Index">Trở về</a>
            </div>
        </form>
 

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
