@model QuanLyDiem.Models.HocPhan

@{
    ViewData["Title"] = "Delete";
}

<h1>Xóa học học phần</h1>

<div>
    <hr />
    <dl class="w3-card w3-white container" style="width:60%">
        <div class="row">
                <dt class = "col-sm-6">
                    Tên học phần
                </dt>
                <dd class = "col-sm-6">
                    @Html.DisplayFor(model => model.TenHocPhan)
                </dd>
            </div>
            <div class="row">
                <dt class = "col-sm-6">
                    Số tín chỉ
                </dt>
                <dd class = "col-sm-6">
                    @Html.DisplayFor(model => model.SoTinChi)
                </dd>
            </div>
            <div class="row">
                <dt class = "col-sm-6">
                    Mã chuyên ngành
                </dt>
                <dd class = "col-sm-6">
                    @Html.DisplayFor(model => model.ChuyenNganh.MaChuyenNganh)
                </dd>
            </div>
           
        </div>
    </dl>    
    <h4 class="w3-center">Bạn có chắc chắn muốn xóa học phần này?</h4>
    <form class="w3-center" asp-action="Delete">
        <input type="hidden" asp-for="MaHocPhan" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Hủy</a>
    </form>
</div>
